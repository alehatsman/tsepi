{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",

        "paths": {
            "@/*": [
                "src/*"
            ]
        },

        "sourceMap": true,

        "strict": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,

        "module": "commonjs",
        "target": "es6"
    },
    "include": [
        "./src/**/*"
    ]
}
